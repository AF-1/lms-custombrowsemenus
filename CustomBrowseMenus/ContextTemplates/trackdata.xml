<?xml version="1.0" encoding="utf-8"?>
<custombrowsemenus>
	<template>
		<name>Song details</name>
		<description>Various information about the selected song</description>
		<parameter type="text" id="menuname" name="Menu name" value="Track info"/>
		<parameter type="text" id="menugroup" name="Menu group" value=""/>
		<parameter type="text" id="menuorder" name="Menu sort order (1-100)" value="50"/>
		<parameter type="checkbox" id="includetitle" name="Track title" value="1"/>
		<parameter type="checkbox" id="includerating" name="Rating" value="0"/>
		<parameter type="checkbox" id="includetrackno" name="Track number" value="1"/>
		<parameter type="checkbox" id="includebitrate" name="Bitrate" value="1"/>
		<parameter type="checkbox" id="includeduration" name="Duration" value="1"/>
		<parameter type="checkbox" id="includevolumeadjustment" name="Volume adjustment" value="1"/>
		<parameter type="checkbox" id="includealbumvolumeadjustment" name="Volume adjustment" value="1"/>
		<parameter type="checkbox" id="includesamplerate" name="Sample rate" value="1"/>
		<parameter type="checkbox" id="includefileformat" name="File format" value="1"/>
		<parameter type="checkbox" id="includefilesize" name="File size" value="1"/>
		<parameter type="text" id="includedclients" name="Only include on these players (empty = all)" value=""/>
		<parameter type="text" id="excludedclients" name="Exclude from these players" value=""/>
		<parameter type="virtuallibrariesmultiplelist" id="includedlibraries" name="Only display for these library views" value=""/>
		<parameter type="virtuallibrariesmultiplelist" id="excludedlibraries" name="Never display for these library views" value=""/>
		<parameter type="text" id="objecttype" name="Object type" value="track"/>
	</template>
</custombrowsemenus>

